<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/calc_main"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".calculator.Calculator"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/calcHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24dp"
            android:layout_marginEnd="24dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toTopOf="@+id/calcAns"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/calcSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            android:text="+"
            android:textSize="32dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/calcAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="96dp"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:columnCount="4"
        android:rowCount="5"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        >
        <Button
            android:id="@+id/btn_C"
            android:text="C"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />

        <Button
            android:id="@+id/btn_plus_minus"
            android:text="+/-"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />

        <Button
            android:id="@+id/btn_parcent"
            android:text="%"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />

        <Button
            android:id="@+id/btn_div"
            android:text="/"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn_operator"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />

        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />

        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_mul"
            android:text="X"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn_operator"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_sub"
            android:text="-"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn_operator"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_plus"
            android:text="+"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn_operator"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:layout_columnSpan="2"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_point"
            android:text="."
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
        <Button
            android:id="@+id/btn_eqal"
            android:text="="
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="@drawable/calc_btn_operator"
            android:textColor="@android:color/white"
            android:textSize="@dimen/calc_textsz" />
    </GridLayout>
</LinearLayout>